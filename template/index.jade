            }
            .w1200 {
                position: relative;
                width: 1200px;
                margin: 0 auto;
            }
            .slides {
                position: relative;
            }
            .slides-main {
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
                padding: 0;
                list-style: none;
            }
            .login-form {
                height: 300px;
                background: #e4d8d4;
                font-size: .12rem;
                border-bottom-left-radius: 5px;
                border-bottom-right-radius: 5px;
            }
            .login-form .form-group {
                width: 240px;
                margin-left: auto;
                margin-right: auto;
            }
            .login-form-label {
                padding-top: 20px;
                padding-bottom: 10px;
            }
            .login-form-label div {
                font-size: .15rem;
                border-bottom: 1px solid #bfbfbf;
            }
            .login-form-user {
                height: 70px;
                background: url(/static/img/index.png) 0 -318px;
            }
            .login-form-user input {
                border: none;
                margin-left: 44px;
                height: 34px;
                background: rgba(0,0,0,0);
                outline: none;
            }
            .main {
                margin-top: 40px;
            }
            .main-container {
                background: url(/static/img/main-bg.png) 0 0 no-repeat;
                background-color: #fff;
            }
            .main-container > .container {
                padding-top: 15px;
                padding-bottom: 15px;
            }
            .block-hot-box {
                margin-bottom: 20px
            }
